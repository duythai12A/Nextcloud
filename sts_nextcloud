apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: nextcloud-aio-nextcloud
  namespace: "{{ .Values.NAMESPACE }}"
  labels:
    app: nextcloud-aio-nextcloud
spec:
  serviceName: nextcloud-aio-nextcloud
  replicas: 1
  selector:
    matchLabels:
      app: nextcloud-aio-nextcloud

  updateStrategy:
    type: RollingUpdate

  template:
    metadata:
      labels:
        app: nextcloud-aio-nextcloud
    spec:

      {{- if eq (.Values.RPSS_ENABLED | default "no") "yes" }}
